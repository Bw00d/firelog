<%= form_for(@expense) do |f| %>
  <% if @expense.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
      <% @expense.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="small-12 small-centered columns field">
    <%= f.label :date %>
    <%= f.text_field :date, id: "date" %>
  </div>
  <div class="small-12 small-centered columns field">
    <%= f.label :amount %>
    <%= f.text_field :amount %>
  </div>
  <div id="category-buttons" class="small-12 small-centered columns field">
    <%= f.label :category_id, "Category" %>
    <%= f.hidden_field :category_id, value: @expense.category_id  %>
    <% @categories.each do |category| %>
    <div class="buttress-35"></div>
      <div class="category-button">
        <%= link_to category.description, 'javascript:;' %>
        <span class="hidden-id"><%= category.id %></span>
      </div>
      <% end %>
    <div class="add-category-button"><%= link_to "+", expenses_path %></div>

  </div>



  
  <div id="vendor-buttons" class="small-12 small-centered columns field">
    <%= f.label "Vendor" %>
    <%= f.text_field :vendor_id %>
  </div>
  <div class="">
    <%= f.submit "Add", class: 'button tiny radius' %>
  </div>
<% end %>

<!-- category-form -->
<div id="category-form">
  <%= form_for @category do |f| %>
    <% if @category.errors.any? %>
      <div id="error_explanation">
        Oops, try again!
      </div>
    <% end %>
    <%= f.text_field :description, id: "category-input" %>
    <%= f.submit "+", id: "add-cat" %>
  <% end %>
</div>
