<!-- May -->
<div  class="month-chart">
	<br>
	<div class="chart small-12 columns">
		<h6>DAILY SPENDING</h6>
		<%= line_chart find_expenses_by_month(params[:search]).group(:date).sum(:amount),
		prefix: "$",decimal: "." %>
	</div>
	<br>
	<div class="chart small-12 columns">
		<h6>AVERAGE BY CATEGORY</h6>
		<%= pie_chart make_pie(find_expenses_by_month(params[:search]).group(:category_id).sum(:amount)),
		prefix: "$",decimal: ".", donut: true %>
	</div>

	<div class="chart small-12 columns">
		<br>
		<%= column_chart make_pie(find_expenses_by_month(params[:search]).group(:category_id).sum(:amount)),
		prefix: "$",decimal: ".", donut: true %>
	</div>
</div>

