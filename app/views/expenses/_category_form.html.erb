<!-- category-form -->
<div id="category-form">
  <%= form_for @category do |f| %>
    <% if @category.errors.any? %>
      <div id="error_explanation">
        Oops, try again!
      </div>
    <% end %>
    <%= f.text_field :description, id: "category-input",:autofocus => true %>
    <%= f.submit "Add", id: "add-cat", class: 'button' %>
  <% end %>
</div>
