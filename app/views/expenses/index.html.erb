<p id="notice"><%= notice %></p>

<%= render 'form' %>

<h6>Expenses</h6>

<div id="expenses">
    <% @expenses.each do |expense| %>
	    <% if expense.date? %>
	      <div class="expense small-4 large-4 columns"><%= expense.date.strftime('%-m/%d/%y') %></div>
	    <% end %>
      <div class="expense small-4 large-4 columns"><%= expense.category %></div>
      <div class="expense small-4 large-4 columns"><%#= expense.vendor_id %></div>
      <div class="expense small-4 large-4 columns"><%= number_to_currency(expense.amount) %></div>
    <% end %>
</div>
