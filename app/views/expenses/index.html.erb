<%= content_for :title, "Firelog" %>
<% unless signed_in? %>

  <div  class="row">
    <div class="small-12 medium-8 large-8 columns small-centered">
    <header id="title">
      <h1>Firelog</h1>
        <h4>Track My Burn Rate</h4>
    </header>
      <div id="home-message" class="small-12 medium-8 large-8 columns medium-centered large-centered ">
        <%= link_to "Get Started", new_user_registration_path, class: "button success radius" %>
      </div>

    </div>
  </div>
<% else %>

<div class="row">
<div class="small-12 medium-11 large-11 columns small-centered">
<%= render 'form' %>


<div id="expenses-list" class="">
  <h5>
    <% @date = Date.today  %>  
    <strong><%= @date.strftime("%B")%></strong>
  </h5>
  <table class="tight-table 12-small columns">
    <thead>
      <tr>
        <th width="75" class="small-text"></th>
        <th width="200" class="small-text"></th>
        <th width="75" class="small-text"></th>

      </tr>
    </thead>

        <tbody>
        <% @expenses_this_month.each do |expense| %>
          
          <tr>
            <td><%= expense.date.try(:strftime, '%-m-%d-%y') %></td>
            <td><%= expense.category %></td>
            <td><%= number_to_currency(expense.amount) %></td>
          </tr>
        <% end %>
        <tr>
            <td><strong>Total:</strong></td>
            <td></td>
            <td><strong><%= number_to_currency(total_expenses(@expenses_this_month)) %></strong></td>
          </tr>
    </tbody>
  </table>
</div>

<% end %>
</div>
</div>